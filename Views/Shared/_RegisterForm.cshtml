@model User
<form asp-action="Register" asp-controller="User" method="POST">
        <table class="table">
          <tr>
            <td class="text-right"><label asp-for="Fname"></label></td>
            <td>
              <span asp-validation-for="Fname"></span>
              <input asp-for="Fname" class="form-control">
            </td>
          </tr>
         <tr>
            <td class="text-right"><label asp-for="Lname"></label></td>
            <td>
              <span asp-validation-for="Lname"></span>
              <input asp-for="Lname" class="form-control">
            </td>
         </tr>
          <tr>
            <td class="text-right"><label asp-for="Dob"></label></td>
            <td>
              <span asp-validation-for="Dob"></span>
              <input asp-for="Dob" class="form-control">
            </td>
          </tr>
          <tr>
            <td class="text-right"><label asp-for="Email"></label></td>
            <td>
              <span asp-validation-for="Email"></span>
              <input asp-for="Email" class="form-control">
            </td>
          </tr>
          <tr>
            <td class="text-right"><label asp-for="EmailConfirm"></label></td>
            <td>
              <span asp-validation-for="EmailConfirm"></span>
              <input asp-for="EmailConfirm" class="form-control">
            </td>
          </tr>
          <tr>
            <td class="text-right"><label asp-for="Password"></label></td>
            <td>
              <span asp-validation-for="Password"></span>
              <input asp-for="Password" class="form-control">
            </td>
          </tr>
          <tr>
            <td class="text-right"><label asp-for="PwConfirm"></label></td>
            <td>
              <span asp-validation-for="PwConfirm"></span>
              <input asp-for="PwConfirm" class="form-control" onleave="check_pw_match()" required>
            </td>
          </tr>
        </table>
        <button class="btn btn-primary" id="register-btn">Register</button>
      </form>